{
  "name": "cycle-web-extensions",
  "version": "0.5",
  "scripts": {
    "clean": "rm -rf ./dist/*; mkdir -p ./dist/",
    "lint": "tslint -c ./tslint.json --project tsconfig.json",
    "build": "yarn run clean; tsc -d",
    "format:tslint": "tslint --project . --fix",
    "format:tsfmt": "tsfmt -r",
    "format": "yarn run format:tsfmt && yarn run format:tslint"
  },
  "description": "Cycle drivers to build WebExtensions",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "typescript:main": "src/index.ts",
  "contributors": [
    "Nathan Spaeth <nathan@spaeth.nl>",
    "Brenton Simpson <appsforartists@google.com>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@cycle/run": "^3.2.0",
    "tslib": "^1.4.0",
    "tslint": "^5.7.0",
    "web-ext-types": "^0.3.1",
    "xstream": "^11.0.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "typescript": "^2.5.3",
    "typescript-formatter": "^6.0.0"
  },
  "keywords": [
    "cycle",
    "cyclejs",
    "driver",
    "chrome",
    "extension",
    "extensions",
    "chrome extension",
    "chrome extensions",
    "web extension",
    "web extensions"
